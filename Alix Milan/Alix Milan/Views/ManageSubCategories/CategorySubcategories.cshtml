@model EnterSubCategory
@using Alix_Milan.ViewModels

@foreach (var category in Model.CategorySubcategories)
{
    if (category.Value.Any())
    {
        <h3>
            @category.Key.Name
        </h3>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => category.Key.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => category.Key.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => category.Key.Order)
                </th>
                <th></th>
            </tr>

            @foreach (var item in category.Value)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    }
}

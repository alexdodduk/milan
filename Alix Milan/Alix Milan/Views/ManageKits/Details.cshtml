@model Alix_Milan.Models.Kit

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Back.cshtml";
}

<h2>@Model.Name</h2>

<dl class="dl-horizontal">
    @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.ImageBytes) + "\" />")
    
    <dt>
        @Html.DisplayNameFor(model => model.Description)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Description)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Price)
    </dt>

    <dd>
        £@Html.DisplayFor(model => model.Price)
    </dd>
</dl>

<h3>Items</h3>
@if (Model.KitItems.Any())
{
    <table class="table">
        <tr>
            <th>
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model.KitItems)
        {
            <tr>
                <td>
                    @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.ImageBytes) + "\" />")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    £@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("View details", "Details", "ManageKitItems", new { @id= item.ID }, null)
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>
        This kit has no items
    </p>
}

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

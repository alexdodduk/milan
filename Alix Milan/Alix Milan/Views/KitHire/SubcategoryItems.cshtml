@model KitHireCategoryModel
@using Alix_Milan.ViewModels

@foreach (var subcategory in Model.SubcategoryKitItems)
{

    if (subcategory.Value.Any())
    {
        <h3>
            @subcategory.Key.Name
        </h3>

        <table class="table">
            <tr>
                <th>
                </th>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                </th>
            </tr>

            @foreach (var item in subcategory.Value)
            {
                <tr>
                    <td>
                        @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.ImageBytes) + "\" />")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        £@Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.RouteLink("View details", "KitItem", new { kitItemName = item.Name })
                    </td>
                </tr>
            }
        </table>
    }
}
@model KitHireCategoryModel
@using Alix_Milan.ViewModels

@if (Model.MiscKitItems.Any())
{
    <h3>
        No Sub-Category
    </h3>

    <table class="table">
        <tr>
            <th>
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model.MiscKitItems)
        {
            <tr>
                <td>
                    @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.ImageBytes) + "\" />")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.RouteLink("View details", "KitItem", new { kitItemName = item.Name })
                </td>
            </tr>
        }
    </table>
}